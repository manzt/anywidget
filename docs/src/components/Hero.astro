---
import Counter from "./examples/Counter.astro";
---

<section class="pt-24 pb-8 overflow-hidden relative z-10">
	<div class="mx-auto max-w-7xl px-4 sm:px-6">
		<div class="lg:grid lg:grid-cols-12 mx-auto lg:gap-16 justify-center">
			<div
				class="relative z-10 px-4 mb-8 sm:px-6 sm:text-center sm:mb-16 lg:mb-0 lg:px-0 lg:text-left lg:flex col-span-5"
			>
				<div class="lg:py-24">
					<h1 class="mt-4 text-4xl sm:mt-5 sm:text-6xl lg:mt-6 xl:text-6xl">
						<span>anywidget</span>
					</h1>
					<p
						class="mt-3 sm:mx-auto lg:mx-0 max-w-lg text-lg sm:text-2xl sm:mt-5"
					>
						custom jupyter widgets made easy
					</p>
					<div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
						<div>
							<a
								href="/en/getting-started/"
								class="text-white hover:bg-primary-800 bg-primary-600 w-full flex items-center justify-center px-4 py-3 border border-transparent rounded-md text-base -medium no-underline hover:no-underline md:text-lg"
							>
								Get Started
							</a>
						</div>
						<div class="relative mt-3 sm:mt-0 sm:ml-3">
							<div
								class="font-mono bg-neutral-900 text-neutral-50 rounded-md flex items-center justify-center pl-3 pr-4 py-3 border border-transparent md:text-lg shadow-primary-700"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="text-secondary-500 mr-2"
									width="1em"
									height="1em"
									preserveAspectRatio="xMidYMid meet"
									viewBox="0 0 20 20"
									><path
										fill="currentColor"
										fill-rule="evenodd"
										d="M7.293 14.707a1 1 0 0 1 0-1.414L10.586 10L7.293 6.707a1 1 0 0 1 1.414-1.414l4 4a1 1 0 0 1 0 1.414l-4 4a1 1 0 0 1-1.414 0Z"
										clip-rule="evenodd"></path></svg
								>
								<span class="pr-4 select-all">pip install anywidget</span>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-span-7">
				<Counter />
			</div>
		</div>
	</div>
</section>
