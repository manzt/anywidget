---
function formatNumber(num: number) {
	if (num < 1000) {
		return num.toString();
	} else if (num < 1000000) {
		return num % 1000 === 0 ? `${Math.floor(num / 1000)}k` : `${(num / 1000).toFixed(1)}k`;
	} else {
		return num % 1000000 === 0 ? `${Math.floor(num / 1000000)}M` : `${(num / 1000000).toFixed(1)}M`;
	}
}

type Props = {
	repo: string;
	description: string;
	url?: string;
	stars: number;
	image?: string;
	gif?: string;
}

let { repo, description, stars } = Astro.props;
let url = Astro.props.url ?? `https://github.com/${repo}`;
let username = repo.split('/')[0];
---


<div class="w-full group flex flex-col justify-between border border-gray-200 rounded-lg overflow-hidden max-h-72">
	<div class="px-3 py-2">
		<div class="flex justify-between">
			<div class="flex items-center space-x-2">
				<img class="h-6 w-6 rounded border" src={`https://www.github.com/${username}.png`} alt={username} />
				<div class="text-sm font-semibold">
					<a href={url} class="text-primary-500 hover:text-primary-600">{repo}</a>
				</div>
			</div>
			{stars ?
				<div class="flex items-center">
					<a href={`${url}/stargazers`} class="text-sm flex items-center fill-gray-500 hover:fill-gray-600 text-gray-500 hover:text-gray-600">
						<svg class="w-3.5 h-3.5" aria-label="stars" role="img" viewBox="0 0 16 16">
							<path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Zm0 2.445L6.615 5.5a.75.75 0 0 1-.564.41l-3.097.45 2.24 2.184a.75.75 0 0 1 .216.664l-.528 3.084 2.769-1.456a.75.75 0 0 1 .698 0l2.77 1.456-.53-3.084a.75.75 0 0 1 .216-.664l2.24-2.183-3.096-.45a.75.75 0 0 1-.564-.41L8 2.694Z"></path>
						</svg>
						<span class="ml-1">{formatNumber(stars)}</span>
					</a>
				</div>
				: null}
		</div>
		<p class="text-sm text-gray-600 line-clamp-2 group-hover:line-clamp-none">{description}</p>
	</div>
	{Astro.props.image ?
		<img class="image-preview w-full" src={Astro.props.image} alt={username} data-gif={Astro.props.gif} /> :
		null
	}
</div>
