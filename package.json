{
	"name": "@anywidget/monorepo",
	"version": "0.1.2",
	"author": "Trevor Manz",
	"license": "MIT",
	"scripts": {
		"build": "pnpm run build:nb && pnpm run build:lab",
		"clean": "rm -rf dist src/anywidget/nbextension/index.js src/anywidget/labextension",
		"build:nb": "pnpm --filter anywidget build && cp packages/main/dist/index.js src/anywidget/nbextension/index.js",
		"build:lab": "jupyter labextension build ./packages/main",
		"version": "changeset version && npm install",
		"release": "npm run prepack && npm run build:python && changeset publish && twine upload dist-python/*"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@jupyterlab/builder": "^3.6.2",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"esbuild": "^0.17.12",
		"typescript": "^5.0.2"
	},
	"jupyterlab": {
		"extension": "packages/main",
		"outputDir": "anywidget/labextension",
		"sharedPackages": {
			"@jupyter-widgets/base": {
				"bundled": false,
				"singleton": true
			}
		}
	}
}
